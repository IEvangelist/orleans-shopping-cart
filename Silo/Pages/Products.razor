@page "/products/{id?}"

<h3>Product Management</h3>

<div class="pb-3">
    <button type="button" @onclick=@(_ => _modal?.Open())
        class="btn btn-primary btn-lg">
        Create New Product?
    </button>
</div>

<ProductTable Products=@_products OnEditProduct=@OnEditProduct />
<ManageProductModal @ref=@_modal OnProductCreated=@OnProductCreated />