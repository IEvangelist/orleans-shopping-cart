@page "/cart"

<MudText Typo=Typo.h4 Class="pb-4">Shopping Cart</MudText>

<MudButton Variant="Variant.Filled" StartIcon=@Icons.Filled.RemoveShoppingCart
    Disabled=@(_cartItems?.Any() is false)
    Color="Color.Secondary" Size="Size.Large" OnClick=@EmptyCartAsync Class="mb-4">
    Empty Cart
</MudButton>

<MudGrid Justify=Justify.FlexStart>
    <MudItem xs="3" Class="mud-height-full">
        <ShoppingCartSummary Items=_cartItems />
    </MudItem>
    @foreach (var item in _cartItems ?? new HashSet<CartItem>())
    {
        <MudItem xs="3" Class="mud-height-full">
            <ShoppingCartItem CartItem=@item
                OnRemoved=@OnItemRemovedAsync
                OnUpdated=@OnItemUpdatedAsync />
        </MudItem>
    }
</MudGrid>
